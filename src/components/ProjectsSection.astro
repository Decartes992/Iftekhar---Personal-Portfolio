---
/**
 * Projects Section Component
 *
 * Displays a grid of featured projects by fetching project data from Astro's content collections.
 *
 * @component
 *
 * @example
 * <ProjectsSection />
 */
import ProjectCard from './ProjectCard3D.jsx';
import { getCollection } from 'astro:content';

const projects = (await getCollection('projects')).sort((a, b) => (b.data.featured ? 1 : 0) - (a.data.featured ? 1 : 0));
---

<section id="projects" class="py-16 md:py-24 bg-bg-alt-current" aria-labelledby="projects-headline">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12 md:mb-16">
      <h2 id="projects-headline" class="text-4xl md:text-5xl font-bold font-display text-text-head-current tracking-tight leading-tight">
        Featured Projects
      </h2>
      <p class="mt-4 text-lg md:text-xl text-text-sub-current max-w-3xl mx-auto">
        A selection of my favorite projects. See my full portfolio for more.
      </p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 md:gap-12">
      {projects.map(project => (
        <div data-aos="fade-up" data-aos-delay={project.data.featured ? "100" : "300"}>
          <ProjectCard {...project.data} />
        </div>
      ))}
    </div>
    <div class="text-center mt-16">
      <a href="/projects" class="text-primary-500-current hover:text-primary-600-current font-semibold text-lg transition-colors duration-300">
        View All Projects
        <span class="ml-2">â†’</span>
      </a>
    </div>
  </div>
</section>