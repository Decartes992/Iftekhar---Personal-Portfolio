---
// Enhanced ThemeToggleButton with smooth transitions and animations
export interface Props {
  menuId?: string;
}
const { menuId } = Astro.props;
---

<button 
  id={menuId || "theme-toggle"} 
  class="theme-toggle-button group" 
  aria-label="Toggle dark mode" 
  aria-pressed="false" {/* Initial state, will be updated by JS */}
  type="button"
>
  <!-- Sun icon (visible in light mode, hidden in dark mode by JS/CSS) -->
  <svg xmlns="http://www.w3.org/2000/svg" class="sun-icon h-5 w-5 transition-all duration-300 transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
  </svg>
  
  <!-- Moon icon (visible in dark mode, hidden in light mode by JS/CSS) -->
  <svg xmlns="http://www.w3.org/2000/svg" class="moon-icon h-5 w-5 absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 transition-all duration-300 transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
  </svg>
</button>

<style>
  .theme-toggle-button {
    position: relative;
    border-radius: 9999px; /* Full-rounded */
    width: 40px; /* Fixed size */
    height: 40px;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    background-color: transparent; /* Base background */
    color: var(--theme-icon-color, currentColor); /* Use CSS var for icon color, fallback to currentColor */
    border: 1px solid var(--theme-border-color, transparent);
    transition: background-color 0.2s ease-in-out, border-color 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
  }

  .theme-toggle-button:hover {
    background-color: var(--theme-hover-bg, rgba(0,0,0,0.05)); /* Themed hover */
    border-color: var(--theme-hover-border-color, transparent);
  }
  
  .theme-toggle-button:focus-visible {
    outline: none;
    box-shadow: 0 0 0 2px var(--theme-focus-ring-color, var(--color-primary-500)); /* Themed focus ring */
  }

  /* Icon visibility and transitions controlled by data-theme on html and direct classes */
  :global(html[data-theme='light']) .theme-toggle-button .sun-icon {
    transform: rotate(0deg) scale(1);
    opacity: 1;
  }
  :global(html[data-theme='light']) .theme-toggle-button .moon-icon {
    transform: rotate(90deg) scale(0);
    opacity: 0;
  }

  :global(html[data-theme='dark']) .theme-toggle-button .sun-icon {
    transform: rotate(90deg) scale(0);
    opacity: 0;
  }
  :global(html[data-theme='dark']) .theme-toggle-button .moon-icon {
    transform: rotate(0deg) scale(1);
    opacity: 1;
  }

  /* Ensure SVGs inherit current color for theming */
  .theme-toggle-button svg {
    stroke: currentColor;
    position: absolute; /* Allow stacking for transition */
  }
</style>