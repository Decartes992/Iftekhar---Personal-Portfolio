---
interface SocialLink { href: string; label: string; svg: string }
const { year = new Date().getFullYear(), socialLinks = [] } = Astro.props as { year?: number; socialLinks?: SocialLink[] };
---
<footer class="py-8 bg-bg-alt-current dark:bg-bg-alt-dark-current mt-12">
  <div class="container mx-auto px-4 text-center space-y-4">
    <p class="text-sm text-text-muted-current">&copy; {year} Iftekhar - Personal Portfolio</p>
    <p class="text-xs text-text-muted-current">Site Last Updated: <span id="last-updated-timestamp"></span></p>
    {socialLinks.length > 0 && (
      <div class="flex justify-center space-x-4">
        {socialLinks.map(link => (
          <a href={link.href} aria-label={link.label} class="text-text-muted-current hover:text-primary-current transition-colors" target="_blank" rel="noopener noreferrer" set:html={link.svg} />
        ))}
      </div>
    )}
  </div>
</footer>
