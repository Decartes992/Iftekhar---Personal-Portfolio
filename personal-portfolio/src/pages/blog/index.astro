---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export const prerender = true;

const posts = await getCollection('blog');
// Sort posts safely by checking if date exists
posts.sort((a, b) => {
  const dateA = a.data.pubDate || a.data.date;
  const dateB = b.data.pubDate || b.data.date;
  
  if (!dateA && !dateB) return 0;
  if (!dateA) return 1;
  if (!dateB) return -1;
  
  return dateB.getTime() - dateA.getTime();
});
---

<BaseLayout title="Blog">
  <h1 class="text-3xl font-bold mb-6">Blog Posts</h1>
  <ul class="space-y-4">
    {posts.map((post) => {
      const postDate = post.data.pubDate || post.data.date;
      const formattedDate = postDate ? postDate.toDateString() : 'No date';
      
      return (
        <li>
          <a href={`/blog/${post.slug}/`} class="text-xl text-blue-600 hover:underline focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 rounded">
            {post.data.title}
          </a>
          <p class="text-gray-600 text-sm">{formattedDate}</p>
        </li>
      );
    })}
  </ul>
</BaseLayout>